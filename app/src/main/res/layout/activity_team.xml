<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".TeamActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="10dp"
        android:paddingVertical="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerPadding="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:id="@+id/innerHorizontalLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="0dp"
                    android:paddingEnd="10dp">

                    <ImageView
                        android:id="@+id/iv_pokeball1"
                        android:layout_width="27dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvpokemon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="TextView"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_pokemon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/innerHorizontalLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:paddingStart="10dp">

                    <ImageView
                        android:id="@+id/iv_pokeball2"
                        android:layout_width="27dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvpokemon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_pokemon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />
                </LinearLayout>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:id="@+id/innerHorizontalLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_pokeball3"
                        android:layout_width="27dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvpokemon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_pokemon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/innerHorizontalLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_pokeball4"
                        android:layout_width="27dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvpokemon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_pokemon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />
                </LinearLayout>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:id="@+id/innerHorizontalLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_pokeball5"
                        android:layout_width="27dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvpokemon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_pokemon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/innerHorizontalLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_pokeball6"
                        android:layout_width="27dp"
                        android:layout_height="73dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvpokemon6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_pokemon6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_foreground" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pokeballSelected"
                android:layout_width="27dp"
                android:layout_height="73dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pokemonSelected"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/btnRelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="RELEASE" />
    </LinearLayout>
</LinearLayout>